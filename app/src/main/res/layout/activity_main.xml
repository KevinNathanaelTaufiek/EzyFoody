<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingVertical="32dp"
    android:paddingHorizontal="24dp"
    android:background="#EDF6FF"
    android:orientation="vertical">

    <include layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's fill your tummy!"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order something right now"
            android:textSize="16sp"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        >

        <LinearLayout
            android:id="@+id/llDrinks"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:background="@drawable/shape_roundedbox"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/greentea"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Drinks"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSnacks"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:background="@drawable/shape_roundedbox"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/dango"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Snacks"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFoods"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:background="@drawable/shape_roundedbox"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/kareraisu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Foods"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTopUp"
            android:layout_width="159dp"
            android:layout_height="159dp"
            android:background="@drawable/shape_roundedbox"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/coins"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="TopUp"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>



    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Develop by 2301907901"
        android:layout_gravity="center"/>

</LinearLayout>