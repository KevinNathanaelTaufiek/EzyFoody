<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:paddingVertical="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_roundedbox">
        <ImageView
            android:id="@+id/ivOrder"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/kareraisu"
            android:layout_marginRight="24dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contoh Nama"
                android:textColor="@color/dark_utama"
                android:textStyle="bold"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tvOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 123000"
                android:layout_weight="1"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnDeleteOrder"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_primarybutton"
            android:drawableLeft="@drawable/ic_delete"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            />

    </LinearLayout>
</LinearLayout>