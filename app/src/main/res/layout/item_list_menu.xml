<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/llListProduct"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:background="@drawable/shape_roundedbox"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivListProduct"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:src="@drawable/greentea"/>
        <TextView
            android:id="@+id/tvListProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Contoh Minuman"
            android:textColor="@color/dark_utama"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvListProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 123"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>